@model CompanyAgreement.modelview.CompanyListViewModel
@{
    ViewData["Title"] = "ListCompany";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Firma Listesi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Firma Adı</th>
                    <th>Kamu/Özel Durumu</th>
                    <th>Anlaşma Durumu</th>
                    @*  <th>Açılan Kontenjan</th>*@
                    <th>Görüşme Tarihi</th>
                    <th>İlgili Kişi</th>
                    <th>Bulunduğu İl</th>

                </tr>
            </thead>


            <tbody>

                @for (int i = 0; i < Model.Company.Count; i++)
                {
                    <tr>
                        <td>@Model.Company[i].CompanyName</td>
                        <td>@Model.Company[i].PublicPrivate</td>
                        <td>@Model.ContractSituation[i].Situation</td>
                        <td>@Model.Company[i].MeetingDate</td>
                        <td>@Model.CompanyInformation[i].Name  @Model.CompanyInformation[i].Surname</td>
                        <td>@Model.ContractInformation[i].Province / @Model.ContractInformation[i].District </td>
                       
                    </tr>
                }

            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>