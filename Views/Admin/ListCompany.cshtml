@model CompanyAgreement.modelview.CompanyListViewModel
@{
    ViewData["Title"] = "ListCompany";
    Layout = "~/Views/Shared/_AdminLayoutList.cshtml";
}

<div class="card">
    <div class="card-header">
        <label>Firma Listesi</label>
    </div>
    <div class="col-md-12" @*style="text-align-last: center;"*@ style="margin-left: 10px; margin-top: 5px; ">
        <div class="card-content">
            <div class="row" style="align-content:flex-start">

                <div class="col-sm-3">
                    <!-- select -->
                    <div class="form-group">
                        <label>Firmaların Onay Durumu</label>
                        <select class="form-control" id="Situations">
                            
                            <option value = "space">Seçiniz</option>
                            <option value="Olumlu">K1-Olumlu</option>
                            <option value="Olumsuz">K2-Olumsuz</option>
                            <option value="Cevap Bekleniyor">K4-Bekleme Aşaması</option>

                        </select>
                    </div>
                </div>

                <div class="col-sm-3">
                    <!-- select -->
                    <div class="form-group">
                        <label>Kamu/Özel Durumu</label>
                        <select class="form-control" id="PublicPrivate">
                            <option value = "space">Seçiniz</option>
                            <option value = "Kamu">Kamu</option>
                            <option value = "Özel">Özel</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-3">
                    <!-- select -->
                    <div class="form-group">
                        <label>Konuma Göre</label>
                        <select class="form-control" id="Location">
                            
                            <option value = "space">Seçiniz</option>

                            @foreach (var item in Model.ContractInformation)
                           {
                               <option value="@item.Province">
                                   @item.Province
                               </option>
                           }
                          
                        </select>
                    </div>
                </div>


                <div class="col-sm-3" @*style="align-self: center; float: left text-align-last: center;"*@>
                    <label></label>
                    <div class="form-group">
                        <button style="height:45px" type="button" id="filterCompanyAdmin" class="btn btn-info  swalDefaultInfo">
                            Filtrele
                        </button>
                    </div>

                </div>

            </div>

        </div>
    </div>


    <!-- select -->
    <!-- /.card-header -->




    <div>
        <table id="CompanyListele" class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Firma Adı</th>
                    <th>Kamu/Özel Durumu</th>
                    <th>Anlaşma Durumu</th>
                    <th>Görüşme Tarihi</th>
                    <th>İlgili Kişi</th>
                    <th>Bulunduğu İl</th>
                    <th>Düzenle</th>

                </tr>
            </thead>
        </table>
    </div>



