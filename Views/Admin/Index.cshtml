@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*#dadada0d card bodyler değiştirilebilinir.*@
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <br />
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Görüşülen Kişinin Bilgileri</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">

                            <div class="form-group">
                                <input class="form-control" id="CompanyInformation_Name" type="text" placeholder="Ad">
                                <br>
                                <input class="form-control" id="CompanyInformation_Surname" type="text" placeholder="Soyad">
                                <br>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input type="email" id="CompanyInformation_mail" class="form-control" placeholder="Email">
                                </div>
                                <label>Görüşülen Tarih</label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input id="MeetingDate" type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                                </div>
                                <!-- /.input group -->
                            </div>
                            <!-- phone mask -->
                            <div class="form-group">
                                <label>Telefon</label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    </div>
                                    <input id="CompanyInformation_GSM" type="text" class="form-control"
                                           data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Anlaşma Durumu</label>
                                <select id="Situations" class="custom-select">
                                    <option value="-1">Seçiniz</option>
                                    <option value="Olumlu">Olumlu</option>
                                    <option value="Olumsuz">Olumsuz</option>
                                    <option value="Cevap Bekleniyor">Cevap Bekleniyor</option>
                                </select>
                            </div>

                        </div>



                    </div>
                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div>
    <!-- /.card -->

    <div class="row">

        <!-- /.col (left) -->
        <div class="col-md-6">
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Firma Bilgileri</h3>
                </div>
                <div class="card-body">
                    <!-- Date range -->
                    <div class="form-group">

                        <label>Firmanın Adı</label>

                        <input id="CompanyName" class="form-control" type="text" placeholder="Firmanın Adı">


                        <label>Website</label>

                        <input id="Description" class="form-control" type="text" placeholder="Website">
                        <label>Mail</label>
                        <br>
                        <input id="ContractInformation_Mail" type="email" class="form-control" placeholder="Email">

                        <label>İletişim Numarası</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            </div>

                            <input id="ContractInformation_Gsm" type="text" class="form-control"
                                   data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask>
                        </div>

                        <div class="form-group">
                            <label>Firma Çalışma Durumu</label>
                            <select id="PublicPrivate" class="custom-select">
                                <option>Kamu</option>
                                <option>Özel</option>

                            </select>
                        </div>



                    </div>
                    <!-- /.form group -->
                    <!-- /.form group -->

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-6">

            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title">Firma Adres Bilgisi</h3>
                </div>
                <div class="card-body">
                    <!-- Date dd/mm/yyyy -->
                    <div class="form-group">
                        <label>Firmanın Açık Adresi</label>
                        <input id="CompanyName"class="form-control" type="text" placeholder="Firmanın Adı">
                        <br>

                        <div class="form-group row">
                            <label class="col-sm-1 col-form-label">İl</label>
                            <div class="col-sm-11">
                                <input id="ContractInformation_Province" class="form-control" id="inputEmail3" placeholder="İl">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-1 col-form-label">İlçe</label>
                            <div class="col-sm-11">
                                <input id="ContractInformation_District" class="form-control" id="inputPassword3" placeholder="İlçe">
                            </div>
                        </div>



                    </div>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <button type="button" id="companyadd" class="btn btn-info swalDefaultInfo">
                Firma Ekle
            </button>

        </div>
        <!-- /.col (right) -->
    </div>
    <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->



